<% if flash[:notice] %>
<p id="notice">
  <%= flash[:notice] %>
</p>
<% end %>
<h1>Editing Book</h1>
  <%= form_with model:@book, local:true do |f| %>
    <div>
      <label>Title</label>
      <%= f.text_field :title %>
    </div>
    <div>
      <label>Body</label>
      <%= f.text_area :body %>
    </div>
    <div>
      <%= f.submit "Update Book" %>
    </div>
  <% end %>
  <a href="###">Show</a>
