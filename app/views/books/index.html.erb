  <body>
    <h1>Books</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><a href="#####">Show</a></td>
          <td><a href="#####">Edit</a></td>
          <td><a href="#####">Destroy</a></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <h2>New book</h2>
    <!-- 以下form_with部分 -->
    <%= form_with model:@book, local:true do |f| %>
      <div>
        <label>Title</label>
        <%= f.text_field :title %>
      </div>
      <div>
        <label>Body</label>
        <%= f.text_area :body %>
      </div>
      <div>
        <%= f.submit "Create Book" %>
      </div>
    <% end %>
  </body>
